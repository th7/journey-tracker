<h1 id="trip-title"><%= @trip.name %></h1>


<div class="map-wrapper">
  <div id="map-canvas"></div>
</div>

<div class="photos-wrapper">
  <% if @photos %>
    <% @photos.each do |photo|%>
      <%= image_tag photo.url, class: 'photo', data: {lat: photo.lat, lng: photo.long}%>
      <% if photo.caption != "" %>
        <div class="photo-caption">
          <%= photo.caption %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>


<svg class="main-svg"></svg>

<script>
	$(document).ready(function() {
	  gmap.initialize();
    ViewPort.initialize();
	});
</script>
