<h1>Photos</h1>

<% if @photos %>
	<p>Photo List:</p>
	<p>Trip ID in session: <%= session[:current_trip] %></p>
	<ul>
		<% @photos.each do |photo| %>
			<li><%= link_to photo.url, photo.url,:target => "_blank" %> - Trip: <%= photo.trip_id %></li>
		<% end %>
	</ul>
<% end %>

<div class="clear"></div>
<h2>Upload Multiple Photos</h2>
<p>Note: jpg or jpeg format only</p>

<%= s3_uploader_form callback_url: photos_url, callback_param: "photo[image_url]", id: "myS3Uploader" do %>
	<%= hidden_field_tag  "Content-Type", "" %>
  <%= file_field_tag :file, multiple: true %>
<% end %>

