<style>
  .uploading_image{
    position: relative;
    display: inline-block;
    width: 100px;
  }
  .image_preview {
    width: 100px;
  }
  .loader {
    position: absolute;
    top: 0px;
    background-color: rgba(255, 255, 255, 0.9);
    color:white;  
    opacity:0.6; /* transparency */  
    filter:alpha(opacity=60); /* IE transparency */
    width: 100%;
    height: 100%;
  }
  .loader img {
    width: 50px;
    margin-left: 10%;
  }


</style>


<div class="container">
  <h1>Upload new photo to Imgur</h1>
  <p><%= link_to "Back to Photo List", photos_path %></p>
  <div>DROP!<button onclick="document.querySelector('input').click()">Or click</button></div>
  <input style="visibility: collapse; width: 0px;" type="file" multiple onchange="uploadImage(this.files,this.files.length-1)">
  <div id="counter"></div>
  <div id="results">
    <div id="preview_area"></div>
  </div>
</div>

<script>
  imgur_uploader();
</script>