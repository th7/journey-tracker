
var Facebook = {
  initialize: function(user) {
    $('#sign_in').on('click', Facebook.login);
    FB.init({
      appId      : '<%=ENV['FACEBOOK_APP_ID']%>', // App ID
      channelUrl : '<%=root_path%>' + '/channel.html', // Channel File
      status     : false, // check login status
      cookie     : false, // enable cookies to allow the server to access the session
      xfbml      : false  // parse XFBML
    });
  },
  login: function(e) {
    e.preventDefault();
    FB.login(function(response){}, {scope: "email,user_events,user_location,user_photos"});
  },
  createUserSuccess: function(e) {
    location.reload();
  }
};

window.fbAsyncInit = function() {
  FB.Event.subscribe('auth.authResponseChange', function(response) {
    if (response.status === 'connected') {
      console.log(response);
      $.ajax({
        type: 'POST',
        url: '/auth/facebook/callback',
        data: response,
        success: Facebook.createUserSuccess
      });
    } else if (response.status === 'not_authorized') {
      FB.login(function(response){}, {scope: "email,user_events,user_location,user_photos"});
    } else {
      FB.login(function(response){}, {scope: "email,user_events,user_location,user_photos"});
    }
  });
};

